# EditorConfig 配置文件
# 确保不同编辑器和IDE的一致性
# 更多信息: https://editorconfig.org

# 顶级配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python 文件
[*.py]
indent_size = 4
max_line_length = 88

# JSON 文件
[*.json]
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# TOML 文件
[*.toml]
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell 脚本
[*.{sh,bash}]
indent_size = 2

# PowerShell 脚本
[*.ps1]
indent_size = 2

# JavaScript/TypeScript 文件
[*.{js,ts,jsx,tsx}]
indent_size = 2

# CSS/SCSS 文件
[*.{css,scss,sass}]
indent_size = 2

# HTML 文件
[*.html]
indent_size = 2

# XML 文件
[*.xml]
indent_size = 2

# 配置文件
[*.{ini,cfg,conf}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# 忽略生成的文件
[*.{min.js,min.css}]
insert_final_newline = false

# 特定文件
[{package.json,*.yml}]
indent_size = 2

# 忽略某些文件的尾随空格检查
[*.{md,txt}]
trim_trailing_whitespace = false
